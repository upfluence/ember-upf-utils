{{#ember-native-scrollable content-size=_contentSize
                           scroll-left=_scrollLeft
                           scroll-top=_scrollTop
                           scrollChange=(action "scrollChange")
                           clientSizeChange=(action "clientSizeChange")}}
  {{#yield-slot 'stats'}}
    {{yield}}
  {{/yield-slot}}

  {{yield _cells}}

  {{#unless isReached}}
    <div class="table-fluid-loader">
      <div class='col-xs-12 col-sm-8 col-md-5 col-lg-4'>
        <div class='profile-description'>
          <div class='profile-description__avatar'>
            <div class="upf-image upf-image--round-108"></div>
          </div>
          <div class='profile-description__content'>
            <div class='placeholder-line'></div>
            <div class='placeholder-line margin-top-xxx-sm'></div>
            <div class='placeholder-line margin-top-xxx-sm'></div>
            <div class='placeholder-line margin-top-xxx-sm'></div>
            <div class='placeholder-line margin-top-xxx-sm'></div>
            <div class='placeholder-line margin-top-xxx-sm'></div>
          </div>
        </div>
      </div>
      <div class='visible-lg col-lg-4'>
        <div class='placeholder-image'></div>
        <div class='placeholder-image'></div>
        <div class='placeholder-image'></div>
      </div>
    </div>
  {{/unless}}
{{/ember-native-scrollable}}
