<div class='profile-description__avatar padding-right-xx-sm'>
  {{#if isSelectable}}
    {{#if (eq overlayType 'selection')}}
      {{#toggle-area value=_selected callbackAction=toggleAction icon=selectedIcon}}
        <img src={{profile.avatar_url}} class="upf-image upf-image--round-108">
      {{/toggle-area}}
    {{else if (eq overlayType 'splitOverlay')}}
      {{#split-overlay-area rightClick=rightClickAction leftClick=leftClickAction
                            rightToggled=rightToggled leftToggled=true}}
        <img src={{profile.avatar_url}} class="upf-image upf-image--round-108">
      {{/split-overlay-area}}
    {{/if}}
  {{else}}
    <img src={{profile.avatar_url}}>
  {{/if}}
</div>

<div class="profile-description__content">
  <span class='text-size-5 text-color-bright-purple text-style-bold wrapped-text'>
    {{profile.name}}

    {{#if hasNotifications}}
      <span class='upf-notification--inline'></span>
    {{/if}}

    {{#if profile.isNew}}
      <span class="label label-primary">New</span>
    {{/if}}
  </span>

  <p class='description text-size-4 text-color-default-light'>
    {{profile.description}}
  </p>

  {{#if profile.address}}
    <p class='text-size-4 text-color-default-lighter'>
      {{display-field value=profile.address icon="map-marker"}}
    </p>
  {{/if}}

  {{yield}}
</div>
