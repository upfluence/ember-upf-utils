<div class='profile-description__avatar'>
  {{#if isSelectable}}
    {{#if (eq overlayType 'selection')}}
      {{#toggle-area value=_selected callbackAction=toggleAction icon=selectedIcon}}
        <img src={{profile.avatar_url}} class="upf-image upf-image--round-108">
      {{/toggle-area}}
    {{else if (eq overlayType 'splitOverlay')}}
      {{#split-overlay-area rightClick=rightClickAction leftClick=leftClickAction
                            rightToggled=rightToggled leftToggled=leftToggled}}
        <img src={{profile.avatar_url}} class="upf-image upf-image--round-108">
      {{/split-overlay-area}}
    {{/if}}
  {{else}}
    <img src={{profile.avatar_url}}>
  {{/if}}
</div>

<div class="profile-description__content">
  <span class='text-size-5 text-color-bright-purple text-style-bold wrapped-text'>
    {{#if profileRoutePath}}
      {{#link-to profileRoutePath profile.id class='upf-link--reset'}}
        <span class='text-color-bright-purple'>{{profile.name}}</span>
      {{/link-to}}
    {{else}}
      {{profile.name}}
    {{/if}}

    {{#if presentInLists}}
      {{#influencer/profile-lists profile=profile
                                  classNames='profile-description__action'}}
        &nbsp; <span class='upf-icon upf-icon--list'></span>
      {{/influencer/profile-lists}}
    {{/if}}

    {{#if hasNotifications}}
      <span class='upf-notification--inline'></span>
    {{/if}}

    {{#if profile.isNew}}
      <span class="label label-primary">New</span>
    {{/if}}

    {{#if profileRoutePath}}
      {{#link-to profileRoutePath profile.id
                 class='upf-link--reset profile-description__action'}}
        &nbsp; {{fa-icon 'pencil' class='text-color-bright-purple'}}
      {{/link-to}}
    {{/if}}
  </span>

  <p class='description text-size-4 text-color-default-light'>
    {{profile.description}}
  </p>

  {{#if profile.address}}
    <p class='text-size-4 text-color-default-lighter'>
      {{display-field value=profile.address icon="map-marker"}}
    </p>
  {{/if}}

  {{yield}}
</div>
