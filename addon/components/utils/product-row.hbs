<div class="fx-row fx-gap-px-18 fx-xalign-center padding-right-px-18 product-row {{if @plain 'product-row--plain'}}"
     ...attributes>
  <div class="product-image-container {{if this.isDefaultImg 'product-image-container--default'}}">
    <img src={{this.productImageUrl}} onerror={{this.imageLoadError}} alt="Product" />
  </div>
  <div class="fx-col fx-malign-center fx-gap-px-3 fx-1 allow-text-overflow-on-children">
    <span class="text-color-default text-size-5 text-style-semibold text-ellipsis">{{@product.name}}</span>
    <span class="text-size-5 font-color-gray-500 text-ellipsis">{{this.productOptionLabel}}</span>
  </div>
  <div class="fx-row fx-gap-px-9 fx-xalign-center">
    {{#if @selected}}
      <OSS::Tag @label={{t "upf_utils.product_row.tag.selected"}} @icon="far fa-check" />
    {{/if}}
    {{#each this.buttonParams as |buttonParam|}}
      <OSS::Button @size="md" @label={{buttonParam.label}} @icon={{buttonParam.icon}} @square={{buttonParam.square}}
                   {{on "click" (fn buttonParam.function @product)}} />
    {{/each}}
  </div>
</div>
